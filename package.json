{
  "name": "notes",
  "version": "0.0.1",
  "description": "notebook collection",
  "author": "Nathan <nathan@gnab.fr>",
  "scripts": {
    "build": "webpack",
    "deploy": "firebase deploy",
    "dev": "webpack-dashboard -- webpack-dev-server --config webpack.config.dev",
    "test": "eslint src tests && jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/n6g7/notes.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/n6g7/notes/issues"
  },
  "homepage": "https://github.com/n6g7/notes#readme",
  "dependencies": {
    "hack": "^0.8.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-router": "^4.2.0"
  },
  "devDependencies": {
    "babel-core": "^6.18.2",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "css-loader": "^0.28.7",
    "eslint": "^4.8.0",
    "eslint-plugin-react": "^7.4.0",
    "extract-loader": "^1.0.1",
    "file-loader": "^1.1.3",
    "html-loader": "^0.5.1",
    "img-loader": "^2.0.0",
    "ipynb-loader": "0.0.2",
    "jest": "^21.2.1",
    "react-test-renderer": "^16.0.0",
    "style-loader": "^0.18.2",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "url-loader": "^0.5.7",
    "webpack": "^3.6.0",
    "webpack-dashboard": "^0.4.0",
    "webpack-dev-server": "^2.9.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "jest": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "globals": {
      "MathJax": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "plugins": [
      "react"
    ]
  },
  "jest": {
    "setupFiles": [
      "./tests/before.js"
    ],
    "transform": {
      "^.+\\.css$": "./tests/emptyTransformer",
      "^.+\\.ipynb$": "./tests/emptyTransformer",
      "^.+\\.jsx?$": "./node_modules/babel-jest",
      "^.+\\.svg$": "./tests/emptyTransformer"
    }
  }
}
